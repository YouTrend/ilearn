<div class="modal fade" id="addEventModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="panel-info">
        <div class="panel-heading">
            請選擇上課時間
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="panel-body" style="min-height: 300px">
            <div class='col-md-5'>
                <div class="form-group">
                    <div class='input-group date' id='datetimepicker'>
                        <input type='text' class="form-control" />
                        <span class="input-group-addon">
	                      <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                </div>
            </div>
            <div class='col-md-1' style="padding: 0px; width: 1%;">-</div>
            <div class='col-md-5'>
                <div class="form-group">
                    <div class='input-group date' id='datetimepicker2'>
                        <input type='text' class="form-control" />
                        <span class="input-group-addon">
	                      <span class="glyphicon glyphicon-time"></span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <%= form_for @event, url: courses_events_path(course_id: @course.id) do |f| %>
            <%= f.hidden_field  :start_time, type: "hidden"  %>
                <%= f.hidden_field  :end_time, type: "hidden"  %>
                    <div class="panel-footer">
                        <button id="buttonAdd" type="submit" class="btn btn-success">確定</button>
                        <!-- <button id="buttonCancel" type="button" class="btn btn-warning">取消</button> -->
                    </div>
                    <% end %>


    </div>
</div>