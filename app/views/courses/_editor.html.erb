<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><%= @title %></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <%= @title %>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                班級資料
                            </div>
                            <!-- /.panel-heading -->
                            <div class="panel-body">
                                <div class="form-group">
                                    <%= f.label :name, "班級名稱" %>
                                        <%= f.text_field :name, class: "form-control"  %>
                                            <%= f.label :description, "說明" %>
                                                <%= f.text_field :description, class: "form-control"  %>
                                </div>
                            </div>
                            <!-- /.panel-body -->
                        </div>
                        <!-- /.panel -->
                    </div>
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                就讀學生
                            </div>
                            <div class="panel-body">
                                <div class="col-lg-6">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            未加入
                                        </div>
                                        <div class="panel-body">
                                            <div class="form-group input-group">
                                                <input id="input_students_autocomplete" type="text" class="form-control" placeholder="學生姓名">
                                                <span class="input-group-btn">
                                                  <button id="button_search_student" class="btn btn-default" type="button"><i class="fa fa-search"></i>
                                                  </button>
                                                </span>
                                            </div>
                                            <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-students" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                                <thead>
                                                    <tr role="row">
                                                        <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 204px;">學生姓名
                                                        </th>
                                                        <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 178px;">學生年級</th>
                                                        <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" "></th>                                                        
                                                    </tr>
                                                </thead>
                                                <tbody>                                                  
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="panel panel-success">
                                        <div class="panel-heading">
                                            已加入
                                        </div>
                                        <div class="panel-body">
                                            <table width="100%"  class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-students-added" role="grid " aria-describedby="dataTables-example_info" style="width: 100%; ">
                                                <thead>
                                                    <tr role="row ">
                                                        <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending " aria-label="Rendering engine: activate to sort column descending  style="width: 204px; ">學生姓名
                                                        </th>
                                                        <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending " style="width: 178px; ">學生年級</th>
                                                         <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending"></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% @students.each do |student| %>
                                                        <%= fields_for 'students[]student', student do |p| %>
                                                            <tr>
                                                                <td>
                                                                    <%= link_to student.name, edit_student_path(student) %>
                                                                </td>
                                                                <td>
                                                                    <%= student.afts_id  %>
                                                                </td>
                                                                <td>
                                                                    <a class="remove_student" href="<%= student.id %>">
                                                                        <button type="button" class="btn btn-primary btn-xs" onclick="$(this).closest('tr').remove(); return false">移出</button>
                                                                    </a>
                                                                    <%= p.hidden_field :id %>
                                                                </td>
                                                            </tr>
                                                            <% end %>
                                                                <% end %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%= link_to "確定", "", class: "btn btn-lg btn-success btn-block", onclick: "$('form').submit();return false" %>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-7 -->
    </div>
</div>