<div class="modal fade" id="addEventModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <%= form_for @event, url: course_events_path(course_id: @course.id) do |f| %>
        <div class="panel-info">
            <div class="panel-heading">
                請選擇上課時間
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>         
            </div>
            <div class="panel-body" style="min-height: 300px">
                <%= render 'event_form', event: @event %>
            </div>
            <%= f.hidden_field  :start_time, type: "hidden"  %>
            <%= f.hidden_field  :end_time, type: "hidden"  %>
            <%= f.hidden_field  :color, type: "hidden"  %>
            <div class="panel-footer">
                <button id="buttonAdd" data-actiontype="edit" type="button" class="btn btn-success">確定</button>
                <button id="buttonCancel" type="button" class="btn btn-warning">取消</button>
            </div>
        </div>
    <% end %>
</div>
