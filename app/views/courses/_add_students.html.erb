<div class="modal fade" id="addStudentsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="panel-info">
        <div class="panel-heading">
            請選擇上課學生
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="panel-body" style="min-height: 300px">
            <div class="form-group input-group">
                <input id="students_autocomplete" type="text" class="form-control" placeholder="學生姓名">
                <span class="input-group-btn">
                <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>


            </div>
            <div class="form-group input-group">
                                         <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                            <thead>
                                                <tr role="row">
                                                    <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 204px;">學生姓名
                                                    </th>
                                                    <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 250px;">系統學號</th>
                                                    <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 228px;">就讀學校</th>
                                                    <th class="" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 178px;">學生年級</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% @students.each do |student| %>
                                                    <tr>
                                                        <td>
                                                            <%= student.name  %>
                                                        </td>
                                                        <td>
                                                            <%= student.afts_id  %>
                                                        </td>
                                                        <td>
                                                            <%= student.school  %>
                                                        </td>
                                                        <td>
                                                            <%= student.grade  %>
                                                        </td>
                                                    </tr>
                                                    <% end %>
                                            </tbody>
                                        </table>               
            </div>           
        </div>
    </div>
</div>