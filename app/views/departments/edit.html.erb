<div id="page-wrapper">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Launch demo modal
    </button>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ...
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="text-center">
            <%= render 'layouts/messages' %>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">營業所管理</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                營業所資料
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <%= form_for @department, url: department_path(@department), method: :patch do |f| %>
                    <fieldset>
                        <div class="form-group">
                            <%= f.label :name, "機構名稱" %>
                                <%= f.text_field :name, class: "form-control"  %>
                        </div>
                        <div class="form-group">
                            <%= f.label :phone, "電話" %>
                                <%= f.text_field :phone, class: "form-control"  %>
                        </div>
                        <div class="form-group">
                            <%= f.label :address, "地址" %>
                                <%= f.text_field :address, class: "form-control"  %>
                        </div>
                        <div class="form-group">
                            <%= f.label :certificate_number, "立案證號" %>
                                <%= f.text_field :certificate_number, class: "form-control"  %>
                        </div>
                    </fieldset>
                    <%= link_to "儲存", "", class: "btn btn-lg btn-success btn-block", onclick: "$('form').submit();return false" %>
                        <% end %>
                            <div class="text-center">
                                <%= render 'layouts/messages' %>
                            </div>
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
</div>