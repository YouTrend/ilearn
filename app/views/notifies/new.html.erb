<div id="page-wrapper">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">通知模組</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          新增通知
        </div>
        <div class="panel-body">
      <%= form_for @notify, :html => {:multipart => true} do |f| %>  
        <div class="form-group">
          <%= f.label :student, "通知學生" %>
          <%= f.collection_check_boxes(:student_ids, @students, :id, :name) do |b| %>
            <div class="checkbox">
              <%= b.label do%>
              <%=b.check_box + b.text%>
              <%end%>
            </div>  
          <% end %> 
        </div>
        <div class="form-group">
          <%= f.label :message, "訊息文字" %>
          <%= f.text_field :message, class: "form-control"  %>
        </div>  
        <div class="form-group">
          <%= f.label :image, "圖片" %>
          <%= f.file_field :image, class: "form-control"  %>
        </div> 
      <% end %>

        <div class="row">
            <%= link_to "確定", "", class: "btn btn-lg btn-success btn-block", onclick: "$('form').submit();return false" %>
            <div class="text-center"> 
              <%= render 'layouts/messages' %>
            </div>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>



