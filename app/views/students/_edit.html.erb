<div class="panel-body">
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :name, "學生姓名" %>
          <%= f.text_field :name, class: "form-control"  %>
        </div>    
        <div class="form-group">
          <%= f.label :afts_id, "系統學號" %>
          <%= f.text_field :afts_id, :readonly => true, class: "form-control", :maxlength=>"9"  %>
        </div>
        <div class="form-group">
          <%= f.label :card_id, "學生卡號" %>
          <%= f.text_field :card_id, class: "form-control"  %>
        </div>  
        <div class="form-group">
          <%= f.label :school, "就讀學校" %>
          <%= f.text_field :school, class: "form-control"  %>
        </div>
        <div class="form-group">
          <%= f.label :grade, "學生年級" %>
          <%= f.text_field :grade, class: "form-control"  %>
        </div> 
        <div class="form-group">
          <%= f.label :birthday, "生日" %>
          <%= f.date_field :birthday, class: "form-control"  %>
        </div>         
        <div class="form-group">
          <%= f.label :identity_code, "身份證字號" %>
          <%= f.text_field :identity_code, class: "form-control"  %>
        </div>            
        <div class="form-group">
          <%= f.label :address, "住址" %>
          <%= f.text_field :address, class: "form-control"  %>
        </div>         
        <div class="form-group">
          <%= f.label :remark, "備註" %>
          <%= f.text_field :remark, class: "form-control"  %>
        </div>         
        <div class="form-group">
          <%= f.label :courses, "就讀班級" %>
          <%= f.collection_check_boxes(:course_ids, Course.all, :id, :name) do |b| %>
            <div class="checkbox">
              <%= b.label do%>
              <%=b.check_box + b.text%>
              <%end%>
            </div>  
          <% end %>                                      
        </div>
      </div>
      <div class="col-lg-6">
        <%= f.fields_for :contacts do |c| %>
          <div class="form-group">
            <%= c.label :name, "聯絡人姓名" %>
            <%= c.text_field :name, class: "form-control"  %>
          </div>             
          <div class="form-group">
            <%= c.label :phone, "聯絡人電話" %>
            <%= c.text_field :phone, class: "form-control"  %>
          </div>        
          <div class="form-group">
            <%= c.label :phone2, "聯絡人電話二" %>
            <%= c.text_field :phone2, class: "form-control"  %>
          </div>        
          <div class="form-group">
            <%= c.label :phone3, "聯絡人手機" %>
            <%= c.text_field :phone3, class: "form-control"  %>
          </div>  
          <div class="form-group">
            <%= c.label :line_token, "ＬＩＮＥ權杖" %>
            <%= c.text_field :line_token, class: "form-control"  %>
          </div> 
          <div class="form-check">
            <%= c.label :notify_demand, "ＬＩＮＥ通知" %>
            <%= c.check_box :notify_demand%>
          </div>
        <% end %>  
      </div>
    </div>
    <div class="row">
      <div class="text-center"> 
        <%= render 'layouts/messages' %>
      </div>
      <%= link_to "確定", "", class: "btn btn-lg btn-success btn-block", onclick: "addStudent()" %>
    </div>
</div>